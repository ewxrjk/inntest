#! /bin/bash
#
# Configure INN
#
# Usage:
#   configure [PATCH ...]
#
# Applies the listed patches to INN's configuration and then starts
# it.
#
set -e
. ./config
for diff; do
    echo "Applying $diff ..."
    ${REALLY} sh -c "cd $PREFIX/etc && patch -p5" < $diff
done

${REALLY} sh -c "cat >> $PREFIX/etc/incoming.conf" <<EOF
peer ${DOMAIN} {
  hostname: localhost
}
EOF
